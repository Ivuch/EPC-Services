<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/javaee
         https://jakarta.ee/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- JSF -->
  <context-param>
    <param-name>jakarta.faces.PROJECT_STAGE</param-name>
    <param-value>Production</param-value>
  </context-param>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>jakarta.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
    <param-value>true</param-value>
  </context-param>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.xhtml</welcome-file>
  </welcome-file-list>
  
  <error-page>
    <error-code>403</error-code>
    <location>/403.xhtml?faces-redirect=true</location>
  </error-page>
  
    <resource-ref>
        <description>Database Connection</description>
        <res-ref-name>hawaii</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

  <multipart-config>
    <!-- Tama침o m치ximo permitido para un archivo (en bytes) -->
    <max-file-size>52428800</max-file-size> <!-- 50 MB -->

    <!-- Tama침o m치ximo permitido para una solicitud completa -->
    <max-request-size>52428800</max-request-size> <!-- 50 MB -->

    <!-- Umbral para escribir el archivo en el disco (en bytes) -->
    <file-size-threshold>1048576</file-size-threshold> <!-- 1 MB -->
  </multipart-config>
</web-app>